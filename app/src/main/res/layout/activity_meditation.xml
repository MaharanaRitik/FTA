<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Meditation"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/meditationbg"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="235dp" />

    <Button
        android:id="@+id/btnDeepSleep"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/meditationBtn"
        android:text="Deep Sleep"
        android:textColor="@color/mediBtnTxt"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.837"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnChakra"
        app:layout_constraintVertical_bias="0.025" />
    
    <Button
        android:id="@+id/btnChakra"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/meditationBtn"
        android:text="Chakra Allign"
        android:textColor="@color/mediBtnTxt"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.837"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnQuick"
        app:layout_constraintVertical_bias="0.025" />

    <Button
        android:id="@+id/btnQuick"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/meditationBtn"
        android:text="Quick Healing"
        android:textColor="@color/mediBtnTxt"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.837"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.020" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:text="What are your current peace plans?"
        android:textColor="@color/meditationText"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.468" />

</androidx.constraintlayout.widget.ConstraintLayout>